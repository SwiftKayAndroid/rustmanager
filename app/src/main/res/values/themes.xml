<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RustManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rust_red</item>
        <item name="colorPrimaryVariant">@color/rust_offred</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rust_red</item>
        <item name="colorSecondaryVariant">@color/rust_offred</item>
        <item name="colorOnSecondary">@color/rust_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowMenuStyle">@style/actionOverflowButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RustManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RustManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RustManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/rust_grey</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/rust_grey</item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/rust_grey</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/rust_grey</item>
    </style>
</resources>